{% extends 'layout.html.twig' %}

{% block content %}

    <div class="profile text-ternary fs-1 ">
        <div class="container">
            <div class="row justify-content-center">
                 <div class="pseudo-profil">
                     {{  user_data.name }}
                 </div>
                <div class ="photoProfil">
                    <img class="img-fluid rounded-circle w-25 " src="https://avatars.githubusercontent.com/{{ user_data.nickname_github }}">
                </div>
                <div class="picture-url fs-4">
                    <p> Poste nous une photo rigolote </p>
                    <form method="POST">
                        <input type="url" id="url" name="url" placeholder="URL d'une image" />
                        <button> Submit </button>
                    </form>
                </div>
                <div class="legends-profil fs-2">
                     Tes légendes postées :
                    <ul class="list-group row">
                        {% for user_legend in user_legends %}
                     <li class="list-group">
                         <div class="col meme">
                             <a href="/image?id={{ user_legend.picture_id }}"><img class="w-25" src="{{ user_legend.url }}" alt="meme"></a>
                         </div>
                         <div class="d-flex flex-column fs-3 col ">
                                {{ user_legend.content }}
                            <div class="fs-5 text-secondary">
                                {{ user_legend.ranking }} votes
                            </div>
                        </div>
                     </li>
                        {% endfor %}
                   </ul>
                </div>
            </div>
        </div>
    </div>


{% endblock %}