{% extends 'layout.html.twig' %}

    {% block content %}
        <form method="post">
            <div class="container">
                <div class="d-flex justify-content-center h-100">
                    <div class="card bg-primary">
                        <div class="card-header text-ternary d-flex justify-content-center">
                            <h3>Inscris-toi</h3>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend d-flex align-items-stretch">
                                        <span class="input-group-text bg-secondary"><i class="fas fa-user text-primary"></i></span>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Pseudo" name="name">
                                    <span class="text-secondary"></span>
                                </div><br>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend d-flex align-items-stretch">
                                        <span class="input-group-text bg-secondary "><i class="fab fa-github text-primary"></i></span>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Pseudo Github" name="nickname_github">
                                    <span class="text-secondary"></span>
                                </div><br>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend d-flex align-items-stretch">
                                        <span class="input-group-text bg-secondary "><i class="fas fa-key text-primary"></i></span>
                                    </div>
                                    <input type="password" class="form-control" placeholder="Mot de passe" name="password">
                                    <span class="text-secondary"></span>
                                </div>
                                <div class="form-group d-flex justify-content-center ">
                                    <button type="submit" value="Login" class="btn float-right text-ternary bg-secondary login_btn">S'inscrire</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    {% endblock %}